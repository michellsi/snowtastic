<div class="container p-3 w-50">
<h2 style="padding: 12px;">Add a new Equipment Item</h2>

<%= simple_form_for(@equipment_item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.label :category %> <br>
    <%= f.select :category, ["Select category", "Skiing" ,"Snowboarding","Accessories"] %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-ghost" %>
  </div>
<% end %>
<br>
<%= link_to 'Back to Equipment Items', equipment_items_path %>
</div>
