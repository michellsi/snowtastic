<div class="container index-head", style="text-align: center">
  <% if params[:category] %>
    <h1><%= params[:category] %></h1>
  <% else %>
    <h1>All available items</h1>
  <% end %>
</div>
<div class="container p-4">
<!--To Do: If user clicked on category on home, only list this category>
iterate through strings equipment items or create new models for category -->
  <div style="position: relative;" class="cards">
    <% @equipment_items.each do |item| %>
      <%= link_to item, style: "text-decoration: none;" do %>
        <div class="card-trip">
          <img src="<%= cl_image_path item.photo.key, crop: :fit %>" />
          <div class="card-trip-infos">
            <h2><%= item.title %></h2>
            <h3><%= number_to_currency(item.price) %></h3>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <li class="icon-item">
    <div style="text-decoration: none;"><%= link_to :back do %>
      <i class="icon-link"><i class="fas fa-arrow-left" ></i></i>
    <% end %></div>
  </li>
</div>
