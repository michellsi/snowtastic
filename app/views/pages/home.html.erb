<body>
  <%= render "shared/banner" %>
  <br><br><br>

  <div class="arrow">
                    <span></span>
                    <span></span>
                    <span></span>

  </div>

  <div class="container mt-5 p-2">

    <h2 style="text-align: center; margin-bottom: 15px;">Check it out</h2>
    <div style="display: flex; justify-content: center;"><%= link_to "See all items", equipment_items_path, class: "btn btn-primary"%></div>
    <div class="category-cards mt-4 mb-5">
      <%= link_to equipment_items_path(category: "Skiing"), class: 'card-category-link' do %>
        <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_url "skiing-category.jpg" %>)">
          Skiing
        </div>
      <% end %>

      <%= link_to equipment_items_path(category: "Snowboarding"), class: 'card-category-link' do %>
        <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_url "snowboarding-category.jpg" %>)">
          Snowboarding
        </div>
      <% end %>

      <%= link_to equipment_items_path(category: "Accessories"), class: 'card-category-link' do %>
        <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_url "accessories.jpg" %>)">
          Accessories
        </div>
      <% end %>
    </div>
  </div>

</body>
