<div class="container", style="text-align: center">
  <h2>Here are the booking details for <%= @booking.equipment_item.title %></h2>
</div>

<div class="item-container mt-5">

  <div>
    <%= cl_image_tag @booking.equipment_item.photo.key, height: 300, width: 400, crop: :fit %>
  </div>

  <div>
    <div>Booked from:
      <%= @booking.equipment_item.user.first_name %>
      <% if @booking.equipment_item.user.avatar.attached? %>
        <%= image_tag @booking.equipment_item.user.avatar, class: "avatar" %>
      <% else %>
        <%= image_tag "user.png", class: "avatar" %>
      <% end %>
    </div>


    <p class="mt-1">Location: <%= @booking.equipment_item.location %></p>
    <p class="mt-3">Booking date: <%= @booking.booking_date.strftime('%d-%m-%Y')  %></p>
    <p class="mt-3"><%= number_to_currency(@booking.equipment_item.price) %> per day</p>

    <div class="border-top border-bottom border-3">
      <p class="text-with-line-breaks mt-3"><%= @booking.equipment_item.description%></p>
    </div>

    <br>
  </div>

</div>
